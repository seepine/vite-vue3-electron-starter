{
  "name": "vite-vue3-starter",
  "version": "0.0.0",
  "license": "ISC",
  "main": "electron/main.js",
  "scripts": {
    "pre":"yarn install --registry=https://registry.npmmirror.com",
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "prepare": "husky install",
    "electron": "wait-on tcp:4000 && cross-env NODE_ENV=development electron .",
    "edev": "concurrently -k \"yarn dev\" \"yarn electron\"",
    "ebuild": "vite build && electron-builder"
  },
  "lint-staged": {
    "*.{vue,js,ts}": "eslint --fix"
  },
  "dependencies": {
    "axios": "~0.21.4",
    "vue": "~3.2.23",
    "vue-router": "~4.0.12",
    "vuex": "~4.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "~13.2.1",
    "@commitlint/config-conventional": "~13.2.0",
    "@ehutch79/vite-eslint": "~0.0.1",
    "@types/node": "~16.11.11",
    "@typescript-eslint/eslint-plugin": "~4.33.0",
    "@typescript-eslint/parser": "~4.33.0",
    "@vitejs/plugin-vue": "~1.10.1",
    "commitizen": "~4.2.4",
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "~3.3.0",
    "cz-customizable": "~6.3.0",
    "electron": "^16.0.4",
    "electron-builder": "^22.14.5",
    "eslint": "~7.32.0",
    "eslint-config-airbnb-base": "~14.2.1",
    "eslint-config-prettier": "~8.3.0",
    "eslint-plugin-import": "~2.25.3",
    "eslint-plugin-prettier": "~4.0.0",
    "eslint-plugin-vue": "~7.20.0",
    "husky": "~7.0.4",
    "lint-staged": "~11.2.6",
    "prettier": "~2.5.0",
    "sass": "~1.44.0",
    "typescript": "~4.4.3",
    "vite": "~2.6.14",
    "vue-tsc": "~0.3.0",
    "wait-on": "^6.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "build": {
    "appId": "com.seepine.vite-vue3-electron-starter",
    "productName": "ViteVue3ElectronStarter",
    "copyright": "Copyright Â© 2021 seepine",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  }
}
